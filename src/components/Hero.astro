---
import Typewriter from '@components/Typewriter';
import { ArrowDownIcon } from '@heroicons/react/solid'
---

<section class="w-full h-screen bg-gradient-to-r from-blue-700 to-violet-600">
  <div class="h-full flex flex-col justify-center">
    <div class="container mx-auto">
      <h1 class="text-5xl text-white font-bold text-center">Hi, I'm Alex!</h1>
      <Typewriter client:load messagePrefix="I'm a " messages={[ "Software Engineer." , "Amazon SDE." , "Web Developer."
        , "Rustacean." , "Front End Engineer." , "GraphQL Enthusiast." , "Guitarist." , "Java Developer."
        , "Python Programmer." , "Cloud Engineer." , "Javascript Developer." ]} />
      <div class="flex justify-center mt-4">
        <a href="https://leskaa.github.io/resume/alex_leska_resume.pdf" target="_blank"
          class="bg-indigo-100 hover:bg-indigo-50 text-blue-700 font-bold py-2 px-4 rounded-full">View My
          Resume</a>
      </div>
    </div>
    <div class="absolute bottom-0 mx-0 w-full flex justify-center">
      <a href="#experience"
        class="text-indigo-100 hover:text-indigo-50 background-transparent font-bold uppercase px-8 py-3 outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150"
        type="button">
        <ArrowDownIcon className="h-10 w-10 mb-5 animate-bounce" />
      </a>
    </div>
  </div>
</section>